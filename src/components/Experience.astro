---
import ContainerSection from "./ContainerSection.astro";
import ExperienceItem from "./ExperienceItem.astro";
import Briefcase from "./icons/Briefcase.astro";
import { EXPERIENCIE } from "../constans/index";
---

<ContainerSection id="experience">
    <h2
        class="flex items-center mb-6 text-3xl font-semibold gap-x-3 text-black/80 dark:text-white"
    >
        <Briefcase class="size-7 stroke-orange-600" />
        Experiencia laboral
    </h2>
    <ol class="relative my-16">
        {
            EXPERIENCIE.map((experiencie) => (
                <li class="">
                    <ExperienceItem {...experiencie} />
                </li>
            ))
        }
    </ol>
</ContainerSection>
